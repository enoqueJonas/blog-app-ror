<div>
     <div class="user-info">
        <p> <%= @user.name %> </p>
        <p> Number of posts: <%= @user.posts.count %> </p>
    </div>
    <ul class="user-posts">
        <% @user.posts.each do |post| %>
            <li>
                <h3> <%= post.title %></h3>
                <p> <%= post.text %></p>
                <div class="post-info">
                    Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %>
                </div>
                <ul class = "post-comments">
                   <% post.comments.each do |comment| %> 
                   <li>
                        <%= comment.text %>
                   </li>
                   <% end %>
                </ul>
            </li>
        <% end %>
    </ul>
      <button>Pagination</button>
</div>